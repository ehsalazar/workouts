#workout
  %h2= @workout.date.strftime("%A, %D at %I:%M %p")
  %h3 Type of workout:
  %p= @workout.workout
  %h3 Mood during workout:
  %p= @workout.mood
  %h3 Length of workout:
  %p= @workout.length

#exercises
  %h2 Exercises
  = render @workout.exercises
  %br/
  %h3 Add an exercise
  = render "exercises/form"

%br/
= link_to "Back", root_path, class: "btn btn-sm btn-default"
= link_to "Edit", edit_workout_path(@workout), class: "btn btn-sm btn-default"
= link_to "Delete", workout_path(@workout), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-default"

